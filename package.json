{
  "name": "simple-invoice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev --turbo",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . && prettier --check .",
    "test": "TZ=Europe/Brussels vitest run",
    "tdd": "TZ=Europe/Brussels vitest",
    "format": "eslint . --fix && prettier --write ."
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tailwindFunctions": [
      "tw"
    ],
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ],
    "overrides": [
      {
        "files": [
          "tsconfig.json"
        ],
        "options": {
          "parser": "jsonc"
        }
      }
    ]
  },
  "dependencies": {
    "@floating-ui/react": "^0.26.23",
    "@headlessui/react": "^2.1.3",
    "@headlessui/tailwindcss": "^0.2.1",
    "@heroicons/react": "^2.1.5",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.14",
    "@types/archiver": "^6.0.2",
    "@types/qrcode": "^1.5.5",
    "archiver": "^7.0.1",
    "autoprefixer": "^10.4.20",
    "case": "^1.6.3",
    "coda-parser": "^0.0.3",
    "csv-parse": "^5.5.6",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.1",
    "fast-glob": "^3.3.2",
    "framer-motion": "^11.3.30",
    "htmlparser2": "^9.1.0",
    "ics": "^3.7.6",
    "lazy-collections": "^0.11.2",
    "marked": "^10.0.0",
    "next": "^14.2.7",
    "puppeteer": "^23.2.0",
    "qrcode": "^1.5.4",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "recharts": "^2.12.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.16.1",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "eslint": "^8.57.0",
    "eslint-config-next": "^14.2.3",
    "jsdom": "^24.1.3",
    "postcss": "^8.4.41",
    "prettier": "^3.3.3",
    "prettier-plugin-organize-imports": "^4.0.0",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5"
  }
