{
  "name": "simple-invoice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest",
    "tdd": "jest --watchAll",
    "format": "prettier --write ."
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "@swc/jest"
    },
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@heroicons/react": "^2.0.18",
    "autoprefixer": "10.4.14",
    "date-fns": "^2.30.0",
    "next": "^13.4.12",
    "puppeteer": "^20.8.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@swc/core": "^1.3.69",
    "@swc/jest": "^0.2.26",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.3",
    "@types/react": "^18.2.15",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.45.0",
    "eslint-config-next": "^13.4.12",
    "jest": "^29.6.1",
    "postcss": "^8.4.27",
    "prettier": "^3.0.0",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.1.6"
  }
}
