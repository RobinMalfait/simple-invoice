{
  "name": "simple-invoice",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "TZ=Europe/Brussels jest",
    "tdd": "TZ=Europe/Brussels jest --watchAll",
    "format": "prettier --write ."
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 100,
    "tailwindFunctions": [
      "tw"
    ],
    "plugins": [
      "prettier-plugin-organize-imports",
      "prettier-plugin-tailwindcss"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "@swc/jest"
    },
    "transformIgnorePatterns": [
      "node_modules/(?!lazy-collections)"
    ],
    "moduleNameMapper": {
      "^~/(.*)$": "<rootDir>/src/$1"
    }
  },
  "dependencies": {
    "@floating-ui/react": "^0.25.4",
    "@headlessui/react": "^0.0.0-insiders.f2179f3",
    "@headlessui/tailwindcss": "^0.2.0",
    "@heroicons/react": "^2.0.18",
    "@tailwindcss/forms": "^0.5.6",
    "@tailwindcss/typography": "^0.5.10",
    "@types/archiver": "^5.3.2",
    "@types/qrcode": "^1.5.2",
    "archiver": "^6.0.1",
    "autoprefixer": "^10.4.15",
    "case": "^1.6.3",
    "date-fns": "^2.30.0",
    "date-fns-tz": "^2.0.0",
    "htmlparser2": "^9.0.0",
    "ics": "^3.5.0",
    "lazy-collections": "^0.11.2",
    "marked": "^9.0.3",
    "next": "^13.5.4",
    "puppeteer": "^21.3.1",
    "qrcode": "^1.5.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "recharts": "^2.8.0",
    "zod": "^3.22.2"
  },
  "devDependencies": {
    "@swc/core": "^1.3.86",
    "@swc/jest": "^0.2.29",
    "@types/jest": "^29.5.5",
    "@types/node": "^20.6.2",
    "@types/react": "^18.2.22",
    "@types/react-dom": "^18.2.7",
    "eslint": "^8.49.0",
    "eslint-config-next": "^13.5.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.4.30",
    "prettier": "^3.0.3",
    "prettier-plugin-organize-imports": "^3.2.3",
    "prettier-plugin-tailwindcss": "^0.5.4",
    "tailwindcss": "^3.3.3",
    "typescript": "^5.2.2"
  }
}
